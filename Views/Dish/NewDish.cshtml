@model Dish
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1>Add a dish</h1>
</div>
<form asp-action="CreateDish" asp-controller="Dish" method="post">
    <div class="mt-3">
        <label asp-for="DishName">Name of Dish:</label>
        <input type="text" asp-for="DishName">
        <span class="text-danger" asp-validation-for="DishName"></span>
    </div>
    <div class="mt-3">
        <label asp-for="Calories"># of Calories:</label>
        <input type="number" asp-for="Calories">
        <span class="text-danger" asp-validation-for="Calories"></span>
    </div>
    <div class="mt-3">
        <select asp-for="ChefId">
            @foreach (Chef c in ViewBag.MyChef)
            {
                <option value="@c.ChefId">@c.FirstName @c.LastName</option>
                
            }
        </select>
    </div>
    <div class="mt-3">
        <label asp-for="Tastiness">Tastiness: </label>
        <select asp-for="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Add Dish</button>
</form>